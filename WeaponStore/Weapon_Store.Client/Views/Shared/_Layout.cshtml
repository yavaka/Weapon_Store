@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="WeaponStore">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/styles/bootstrap4/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/plugins/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="~/plugins/plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
    <link rel="stylesheet" type="text/css" href="~/plugins/plugins/OwlCarousel2-2.2.1/animate.css">
    <link rel="stylesheet" type="text/css" href="~/styles/main_styles.css">
    <link rel="stylesheet" type="text/css" href="~/styles/responsive.css">
</head>

<body>
    <div class="super_container">

        <header class="header trans_300">
            <div class="main_nav_container">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 text-right">
                            <div class="logo_container">
                                @* TODO: LOGO*@
                            </div>
                            <nav class="navbar">
                                <ul class="navbar_menu">
                                    <li><a asp-controller="Home" asp-action="Index">HOME</a></li>
                                    <li><a asp-controller="#" asp-action="#">SHOP</a></li>
                                    <li><a asp-controller="#" asp-action="#">CONTACT</a></li>
                                </ul>
                                <ul class="navbar_user">

                                    <li><a href="#"><i class="fa fa-search" aria-hidden="true"></i></a></li>
                                    @*Dropdown menu: Register and Login*@
                                    <li>
                                        <div class="dropdown show">
                                            <a class="dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fa fa-user" aria-hidden="true"></i>
                                            </a>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                                <div class="dropdown-item">
                                                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Register</a>
                                                </div>
                                                <div class="dropdown-item">
                                                    <a asp-area="Identity" asp-page="/Account/Login">Login</a>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                                <div class="hamburger_container">
                                    <i class="fa fa-bars" aria-hidden="true"></i>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container body-content">
                @RenderBody()

            </div>

            @RenderSection("scripts", required: false)
        </header>
        <hr />
        <footer>
            @DateTime.Now
        </footer>
    </div>

    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/styles/bootstrap4/popper.js"></script>
    <script src="~/styles/bootstrap4/bootstrap.min.js"></script>
    <script src="~/plugins/Isotope/isotope.pkgd.min.js"></script>
    <script src="~/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
    <script src="~/plugins/easing/easing.js"></script>
    <script src="~/js/custom.js"></script>

</body>
</html>
